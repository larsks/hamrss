# Ham Radio Scraper Server Configuration
# Copy this file to .env and adjust the values as needed

# Database Configuration
HAMRSS_DATABASE_URL=postgresql+psycopg://hamrss:hamrss@localhost/hamrss

# Scraping Configuration
HAMRSS_SCRAPE_INTERVAL_HOURS=6
HAMRSS_ENABLED_DRIVERS=hamrss.driver.hro,hamrss.driver.mtc,hamrss.driver.rlelectronics

# Playwright Configuration (only needed if using drivers that require Playwright)
HAMRSS_PLAYWRIGHT_SERVER_URL=ws://127.0.0.1:3000/

# Logging Configuration
HAMRSS_LOG_LEVEL=INFO

# Server Configuration
HAMRSS_MAX_CONCURRENT_DRIVERS=3
HAMRSS_SCRAPE_TIMEOUT_MINUTES=30

# Database Connection Pool Settings
HAMRSS_DB_POOL_SIZE=5
HAMRSS_DB_POOL_OVERFLOW=10